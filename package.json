{
  "name": "electron-react-webpack-boilerplate",
  "version": "0.1.0",
  "description": "A minimal Electron application",
  "author": "Mike Herwig",
  "license": "MIT",
  "main": "./dist/index.js",
  "scripts": {
    "build": "webpack --progress",
    "server": "webpack-dev-server",
    "start": "webpack --progress && electron ./dist",
    "electron": "electron ./dist",
    "start-dev": "concurrently \"webpack-dev-server --content-base src/\" \"wait-on http://localhost:8080/ && cross-env NODE_ENV=development electron ./src\""
  },
  "babel": {
    "presets": [
      "es2015",
      "react"
    ]
  },
  "devDependencies": {
    "babel-core": "^6.25.0",
    "babel-loader": "^7.1.1",
    "babel-preset-env": "^1.6.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "clean-webpack-plugin": "^0.1.16",
    "concurrently": "^3.5.0",
    "copy-webpack-plugin": "^4.0.1",
    "cross-env": "^5.0.1",
    "electron": "~1.6.2",
    "wait-on": "^2.0.2",
    "webpack": "^3.1.0",
    "webpack-dev-server": "^2.5.1"
  },
  "dependencies": {
    "react": "^15.6.1",
    "react-dom": "^15.6.1"
  }
}
